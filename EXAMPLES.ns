# ==========================================
# CONTOH 1: System Kunjungan dengan Variabel
# ==========================================
# Mencatat berapa kali pemain login
# saat pemain masuk:
#     tambah 1 ke variabel {kunjungan.%player%}
#     kirim "&a━━━━━━━━━━━━━━━━━━━━━━━━━━━━" ke pemain
#     kirim "&e  Selamat datang, &b%player%&e!" ke pemain
#     kirim "&7  Kunjungan ke-&a{kunjungan.%player%}" ke pemain
#     kirim "&a━━━━━━━━━━━━━━━━━━━━━━━━━━━━" ke pemain

# ==========================================
# CONTOH 2: Deteksi Diamond Ore dengan Kondisi
# ==========================================
# Memberitahu server jika ada yang menemukan diamond
# saat blok dihancurkan:
#     jika blok adalah "DIAMOND_ORE":
#         broadcast "&b✦ &e%player% &bmenemukan diamond!"
#         tambah 1 ke variabel {diamond.%player%}
#         kirim "&aTotal diamond yang kamu temukan: &e{diamond.%player%}" ke pemain
#     jika blok adalah "EMERALD_ORE":
#         broadcast "&a✦ &e%player% &amenemukan emerald!"
#         tambah 1 ke variabel {emerald.%player%}

# ==========================================
# CONTOH 3: VIP System dengan Permission Check
# ==========================================
# Memberikan bonus kepada pemain VIP
# saat pemain masuk:
#     jika pemain punya izin "nusantara.vip":
#         kirim "&6&l[VIP] &eSelamat datang pemain VIP!" ke pemain
#         kirim "&7Kamu mendapat bonus login!" ke pemain
#     jika pemain punya izin "nusantara.admin":
#         kirim "&c&l[ADMIN] &eSelamat datang administrator!" ke pemain

# saat blok dihancurkan:
#     jika pemain punya izin "nusantara.vip":
#         jika blok adalah "DIAMOND_ORE":
#             kirim "&6[VIP Bonus] &aKamu mendapat double XP!" ke pemain

# ==========================================
# CONTOH 4: Custom Command - /sembuhkan
# ==========================================
# Command untuk menyembuhkan pemain
# perintah /sembuhkan:
#     izin: "nusantara.heal"
#     aksi:
#         pulihkan pemain
#         kirim "&a━━━━━━━━━━━━━━━━━━━━━━━━━━━━" ke pemain
#         kirim "&2  ♥ &aDarah telah dipulihkan!" ke pemain
#         kirim "&2  ♨ &aLapar telah dipulihkan!" ke pemain
#         kirim "&a━━━━━━━━━━━━━━━━━━━━━━━━━━━━" ke pemain

# ==========================================
# CONTOH 5: Custom Command - /feed
# ==========================================
# Command untuk memberi makan pemain
# perintah /feed:
#     izin: "nusantara.feed"
#     aksi:
#         beri makan pemain
#         kirim "&e♨ Lapar telah dipulihkan!" ke pemain

# ==========================================
# CONTOH 6: Mining Statistics Tracker
# ==========================================
# Melacak statistik mining pemain
# saat blok dihancurkan:
#     jika blok adalah "STONE":
#         tambah 1 ke variabel {stone.%player%}
#     jika blok adalah "DIAMOND_ORE":
#         tambah 1 ke variabel {diamond.%player%}
#         kirim "&bDiamond yang ditambang: &e{diamond.%player%}" ke pemain
#     jika blok adalah "GOLD_ORE":
#         tambah 1 ke variabel {gold.%player%}
#     jika blok adalah "IRON_ORE":
#         tambah 1 ke variabel {iron.%player%}

# ==========================================
# CONTOH 7: Special Tool Detection
# ==========================================
# Memberikan pesan khusus saat menggunakan tool tertentu
# saat blok dihancurkan:
#     jika pemain memegang "DIAMOND_PICKAXE":
#         jika blok adalah "DIAMOND_ORE":
#             kirim "&bMenambang dengan Diamond Pickaxe!" ke pemain
#     jika pemain memegang "NETHERITE_PICKAXE":
#         kirim "&5[Pro Miner] &dMenambang dengan Netherite!" ke pemain

# ==========================================
