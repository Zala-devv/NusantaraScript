#         kirim "&7Total Login: &a{total_login.%player%}" ke pemain
#         kirim "&a━━━━━━━━━━━━━━━━━━━━━━━━━━━" ke pemain

# ==========================================
# CONTOH 12: Broadcast saat Quit
# ==========================================
# Memberitahu pemain lain saat ada yang keluar
# saat pemain keluar:
#     broadcast "&e%player% &7telah meninggalkan server"

# ==========================================
# TIPS PENGGUNAAN:
# ==========================================
# 1. Gunakan 4 spasi atau 1 tab untuk indentasi
# 2. Variabel global: {namaVariabel}
# 3. Variabel pemain: {namaVariabel.%player%}
# 4. Gunakan & untuk color codes (&a = hijau, &c = merah, dll)
# 5. Jika statement bisa nested (bertingkat)
# 6. Custom command bisa punya izin (permission)
# 7. Gunakan /nusantara reload untuk reload script

# ==========================================
# MATERIAL NAMES:
# ==========================================
# DIAMOND_ORE, DIAMOND_BLOCK, EMERALD_ORE, GOLD_ORE
# IRON_ORE, COAL_ORE, STONE, COBBLESTONE, DIRT, GRASS_BLOCK
# DIAMOND_PICKAXE, IRON_PICKAXE, GOLDEN_PICKAXE, NETHERITE_PICKAXE
# Dan semua material Minecraft lainnya (gunakan uppercase)

# ==========================================
# COLOR CODES:
# ==========================================
# &0 = Hitam    &8 = Dark Gray
# &1 = Navy     &9 = Biru
# &2 = Hijau    &a = Hijau Terang
# &3 = Teal     &b = Cyan
# &4 = Merah    &c = Merah Terang
# &5 = Ungu     &d = Pink
# &6 = Emas     &e = Kuning
# &7 = Abu-abu  &f = Putih
# &l = Bold     &n = Underline
# &o = Italic   &r = Reset
