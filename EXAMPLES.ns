#     kirim "&eWelcome back, &a%player%&e!" ke pemain
#     kirim "&7Login ke-&a{total_login.%player%} &7| Diamond: &b{diamond.%player%}" ke pemain
#     kirim "&7━━━━━━━━━━━━━━━━━━━━━━━━━━━━" ke pemain

# ==========================================
# CONTOH 9: Anti-Grief dengan Cancel Event
# ==========================================
# Mencegah pemain non-VIP menghancurkan blok tertentu
# saat blok dihancurkan:
#     jika blok adalah "DIAMOND_BLOCK":
#         jika pemain punya izin "build.special":
#             kirim "&aKamu boleh menghancurkan Diamond Block" ke pemain
#         batalkan event
#         kirim "&cKamu tidak boleh menghancurkan blok ini!" ke pemain

# ==========================================
# CONTOH 10: Daily Login Reward
# ==========================================
# Memberikan reward login harian (menggunakan variabel)
# saat pemain masuk:
#     tambah 1 ke variabel {daily_points.%player%}
#     kirim "&6Daily Points: &e{daily_points.%player%}" ke pemain
#     jika pemain punya izin "nusantara.vip":
#         tambah 1 ke variabel {daily_points.%player%}
#         kirim "&6[VIP Bonus] &e+1 Extra Point!" ke pemain

# ==========================================
